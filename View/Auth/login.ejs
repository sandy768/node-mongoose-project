<%-include('../includes/header.ejs')%>
<link rel="stylesheet" href="/css/authLogin.css">
<title>
    <%=title%>
</title>
</head>
<body>
    <%-include('../includes/navbar.ejs')%>
    <main>
        <div class="login row form-control">
            <form action="/auth/postlogin" method="POST" autocomplete="off">
                <h3 class="text-light text-center fs-2.5 mt-4 mb-3 pt-2">Login</h3>
                <label for="email" class="form-label text-light">Email Id</label>
                <input type="email" name="email" id="email" class="form-control col-7" placeholder="Enter your Email Id"><br>
                <div>
                    <%if(errorMsg){%>
                        <p class="text-danger"><%=errorMsg%>!</p>
                    <%}%>
                </div>
                <label for="password" class="form-label text-light">Password</label>
                <input type="password" name="password" id="password" class="form-control col-7" placeholder="Enter your Password"><br>
                <div>
                    <%if(errorPass){%>
                        <p class="text-danger"><%=errorPass%>!</p>
                    <%}%>
                </div>
                <div class="d-flex justify-content-center mt-3 mb-5">
                    <button type="submit" value="Login" class="btn btn-warning btn1 form-control">Sign In</button>
                </div>
            </form>
        </div>
    </main>
<%-include('../includes/footer.ejs')%>